<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">
    
    <!-- Vehicle Types (Different Indian vehicles) -->
    <vType id="car" accel="2.6" decel="4.5" sigma="0.5" length="4.5" maxSpeed="55" guiShape="passenger"/>
    <vType id="bus" accel="1.2" decel="4.0" sigma="0.3" length="12.0" maxSpeed="45" guiShape="bus"/>
    <vType id="motorcycle" accel="3.5" decel="7.0" sigma="0.8" length="2.2" maxSpeed="65" guiShape="motorcycle"/>
    <vType id="truck" accel="1.0" decel="4.0" sigma="0.3" length="8.0" maxSpeed="40" guiShape="truck"/>
    
    <!-- Routes: Each direction to each other direction -->
    
    <!-- North to South (Straight) -->
    <route id="north_to_south" edges="north_in south_out"/>
    <!-- North to East (Right turn) -->
    <route id="north_to_east" edges="north_in east_out"/>
    <!-- North to West (Left turn) -->
    <route id="north_to_west" edges="north_in west_out"/>
    
    <!-- South to North (Straight) -->
    <route id="south_to_north" edges="south_in north_out"/>
    <!-- South to East (Left turn) -->
    <route id="south_to_east" edges="south_in east_out"/>
    <!-- South to West (Right turn) -->
    <route id="south_to_west" edges="south_in west_out"/>
    
    <!-- East to West (Straight) -->
    <route id="east_to_west" edges="east_in west_out"/>
    <!-- East to North (Left turn) -->
    <route id="east_to_north" edges="east_in north_out"/>
    <!-- East to South (Right turn) -->
    <route id="east_to_south" edges="east_in south_out"/>
    
    <!-- West to East (Straight) -->
    <route id="west_to_east" edges="west_in east_out"/>
    <!-- West to North (Right turn) -->
    <route id="west_to_north" edges="west_in north_out"/>
    <!-- West to South (Left turn) -->
    <route id="west_to_south" edges="west_in south_out"/>
    
    <!-- Traffic Flows (Vehicles per hour) -->
    
    <!-- North Lane Traffic (180 vehicles/hour = 0.05 vehicles/second) -->
    <flow id="flow_north_to_south" type="car" route="north_to_south" begin="0" end="3600" vehsPerHour="120" departLane="random"/>
    <flow id="flow_north_to_east" type="car" route="north_to_east" begin="0" end="3600" vehsPerHour="40" departLane="random"/>
    <flow id="flow_north_to_west" type="car" route="north_to_west" begin="0" end="3600" vehsPerHour="20" departLane="random"/>
    
    <!-- South Lane Traffic -->
    <flow id="flow_south_to_north" type="car" route="south_to_north" begin="0" end="3600" vehsPerHour="100" departLane="random"/>
    <flow id="flow_south_to_east" type="car" route="south_to_east" begin="0" end="3600" vehsPerHour="30" departLane="random"/>
    <flow id="flow_south_to_west" type="car" route="south_to_west" begin="0" end="3600" vehsPerHour="50" departLane="random"/>
    
    <!-- East Lane Traffic -->
    <flow id="flow_east_to_west" type="car" route="east_to_west" begin="0" end="3600" vehsPerHour="140" departLane="random"/>
    <flow id="flow_east_to_north" type="car" route="east_to_north" begin="0" end="3600" vehsPerHour="25" departLane="random"/>
    <flow id="flow_east_to_south" type="car" route="east_to_south" begin="0" end="3600" vehsPerHour="35" departLane="random"/>
    
    <!-- West Lane Traffic -->
    <flow id="flow_west_to_east" type="car" route="west_to_east" begin="0" end="3600" vehsPerHour="110" departLane="random"/>
    <flow id="flow_west_to_north" type="car" route="west_to_north" begin="0" end="3600" vehsPerHour="45" departLane="random"/>
    <flow id="flow_west_to_south" type="car" route="west_to_south" begin="0" end="3600" vehsPerHour="25" departLane="random"/>
    
    <!-- Add some buses and motorcycles for realism -->
    <flow id="bus_north_south" type="bus" route="north_to_south" begin="0" end="3600" vehsPerHour="10" departLane="random"/>
    <flow id="bus_east_west" type="bus" route="east_to_west" begin="0" end="3600" vehsPerHour="8" departLane="random"/>
    
    <flow id="motorcycle_mixed" type="motorcycle" route="north_to_south" begin="0" end="3600" vehsPerHour="30" departLane="random"/>
    
</routes>